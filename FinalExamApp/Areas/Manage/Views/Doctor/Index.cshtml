@model List<Doctor>

@{
    int count = 0;
}
<div class="container">
    <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary" style="margin-left:50px">Create</a>
</div>
<div class="container">
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Position</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/Upload/Doctor/@item.ImgUrl"/>
                        </div>
                    </td>
                    <td>
                        <a asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"> Update</a>
                        <a asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete</a>
                       
                    </td>
                </tr>
            }
   
    </tbody>
</table>
</div>
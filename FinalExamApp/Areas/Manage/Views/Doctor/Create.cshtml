@using FinalExamApp.Areas.Manage.ViewModels

@model CreateDoctorVM
<div class="container">
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="form-group">
            <label asp-for="Position">Position</label>
            <input type="text" class="form-control" asp-for="Position">
            <span asp-validation-for="Position" style="color:red"></span>
    </div>
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <input  class="form-control" asp-for="Image">
            <span asp-validation-for="Image" style="color:red"></span>
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>